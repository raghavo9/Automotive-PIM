{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="btn btn-primary btn-lg btn-block" style="font-size:30px;font-weight:bold;">{{ user.email }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>


    <div class="btn-group">
        <button class="btn btn-primary" onclick="window.location.href='http://localhost:8000/user';">
            <i class="fa fa-chevron-left"></i>Back </button>
        <button class="btn btn-primary" onclick="window.location.href='http://localhost:8000/user/{{user.id}}/edit';">
            <i class="fa fa-pencil"></i>Edit </button>


        {{ include('user/_delete_form.html.twig') }}

    </div>
{% endblock %}
